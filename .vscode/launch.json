{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Streamlit",
            "type": "python",
            "request": "launch",
            "module": "streamlit",
            "args": ["run", "${file}"],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: Run Tests",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/tests",  // Points to your tests folder
            "console": "integratedTerminal",
            "args": ["-m", "pytest"]
        }
    ]
}
